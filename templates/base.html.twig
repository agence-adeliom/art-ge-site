<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        {% block robots %}{% endblock %}
        <title>{% block title %}ÉcoBoussole : autodiagnostic de votre engagement durable!{% endblock %}</title>
        <link rel="icon" href="/favicon.png">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="{% block description %}Acteur du tourisme en Grand-Est ? Découvrez le calculateur ÉcoBoussole et accédez à votre niveau d’engagement pour le tourisme durable.{% endblock %}">
        <script src="https://kit.fontawesome.com/75c45f041d.js" crossorigin="anonymous"></script>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Cormorant:wght@500&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {% if app.environment == 'prod' %}
            <script defer data-domain="ecoboussole.art-grandest.fr" src=https://plausible.io/js/script.js></script>
            {% endif %}
            {% if (page | default(false)) is same as 'resultat' %}
            <script>
                window.repondant = "{{ repondant | raw }}";
                window.resultats = JSON.parse('{{ resultats|json_encode|raw }}');
            </script>
            {% endif %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% if app.environment == 'staging' %}
            <script>
                window.markerConfig = {
                    project: '659512dfaf650a0597c940c1',
                    source: 'snippet'
                };
                !function(e,r,a){if(!e.__Marker){e.__Marker={};var t=[],n={__cs:t};["show","hide","isVisible","capture","cancelCapture","unload","reload","isExtensionInstalled","setReporter","setCustomData","on","off"].forEach(function(e){n[e]=function(){var r=Array.prototype.slice.call(arguments);r.unshift(e),t.push(r)}}),e.Marker=n;var s=r.createElement("script");s.async=1,s.src="https://edge.marker.io/latest/shim.js";var i=r.getElementsByTagName("script")[0];i.parentNode.insertBefore(s,i)}}(window,document);
            </script>
        {% endif %}
        {% block body %}
            <div id="root"></div>
        {% endblock %}
    </body>
</html>
