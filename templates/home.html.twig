{% extends 'base.html.twig' %}
{% form_theme form 'tailwind_2_layout.html.twig' %}
{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold underline">
        Hello world styled by tailwindcss
    </h1>

    <form name="reponse" method="post">
        <div id="reponse">
            <div class="mb-6">
                <label class="block text-gray-800 required">Repondant</label>
                <div id="reponse_repondant">
                    <div class="mb-2">
                        <label class="block text-gray-800 required" for="reponse_repondant_email">Email</label>
                        <input type="text" id="reponse_repondant_email" name="reponse[repondant][email]" required="required" class="border">
                    </div>
                    <div class="mb-2">
                        <label class="block text-gray-800 required" for="reponse_repondant_firstname">Firstname</label>
                        <input type="text" id="reponse_repondant_firstname" name="reponse[repondant][firstname]" required="required" class="border">
                    </div>
                    <div class="mb-2">
                        <label class="block text-gray-800 required" for="reponse_repondant_lastname">Lastname</label>
                        <input type="text" id="reponse_repondant_lastname" name="reponse[repondant][lastname]" required="required" class="border">
                    </div>
                    <div class="mb-2">
                        <label class="block text-gray-800 required" for="reponse_repondant_phone">Phone</label>
                        <input type="text" id="reponse_repondant_phone" name="reponse[repondant][phone]" required="required" class="border">
                    </div>
                    <div class="mb-2">
                        <label class="block text-gray-800 required" for="reponse_repondant_company">Company</label>
                        <input type="text" id="reponse_repondant_company" name="reponse[repondant][company]" required="required" class="border">
                    </div>
                    <div class="mb-2">
                        <label class="block text-gray-800 required" for="reponse_repondant_address">Address</label>
                        <input type="text" id="reponse_repondant_address" name="reponse[repondant][address]" required="required" class="border">
                    </div>
                    <div class="mb-2">
                        <label class="block text-gray-800 required" for="reponse_repondant_city">City</label>
                        <input type="text" id="reponse_repondant_city" name="reponse[repondant][city]" required="required" class="border">
                    </div>
                    <div class="mb-2">
                        <label class="block text-gray-800 required" for="reponse_repondant_zip">Zip</label>
                        <input type="text" id="reponse_repondant_zip" name="reponse[repondant][zip]" required="required" class="border">
                    </div>
                    <div class="mb-6">
                        <label class="block text-gray-800 required" for="reponse_repondant_country">Country</label>
                        <input type="text" id="reponse_repondant_country" name="reponse[repondant][country]" required="required" class="mt-1 border">
                    </div>
                    <div class="mb-2">
                        <div class="inline-flex items-center">
                            <input type="checkbox" id="reponse_repondant_restauration" name="reponse[repondant][restauration]" class="mr-2" value="1">
                            <label class="block text-gray-800 required" for="reponse_repondant_restauration">Restauration</label>
                        </div>
                    </div>
                    <div class="mb-2">
                        <div class="inline-flex items-center">
                            <input type="checkbox" id="reponse_repondant_greenSpace" name="reponse[repondant][greenSpace]" class="mr-2" value="1">
                            <label class="block text-gray-800 required" for="reponse_repondant_greenSpace">Green space</label>
                        </div>
                    </div>
                    <div class="mb-2">
                        <label class="block text-gray-800 required" for="reponse_repondant_department">Department</label>
                        <select id="reponse_repondant_department" name="reponse[repondant][department]" class="border">
                            <option value="1">Ardennes</option>
                            <option value="2">Aube</option>
                            <option value="3">Marne</option>
                            <option value="4">Haute-Marne</option>
                            <option value="5">Meurthe-et-Moselle</option>
                            <option value="6">Meuse</option>
                            <option value="7">Moselle</option>
                            <option value="8">Bas-Rhin</option>
                            <option value="9">Haut-Rhin</option>
                            <option value="10">Vosges</option>
                        </select>
                    </div>
                    <div class="mb-2">
                        <label class="block text-gray-800 required" for="reponse_repondant_typologie">Typologie</label>
                        <select id="reponse_repondant_typologie" name="reponse[repondant][typologie]" class="border">
                            <option value="1">Un hôtel, meublé, résidence, chambre d'hôtes</option>
                            <option value="2">Un camping</option>
                            <option value="3">Un lieu de visite</option>
                            <option value="4">Une activité de loisirs</option>
                            <option value="5">Un restaurant</option>
                        </select>
                    </div>
                </div>
            </div>

            {% for question in questions %}
            <div class="mb-6 choices">
                <h2 class="font-bold">{{ question.libelle }}</h2>
                {% for choice in question.choices %}
                    <div><input type="checkbox" name="reponse[rawForm][{{ question.id }}][answers][{{ choice.id }}]" class="mr-2" id="{{ question.id ~ choice.slug }}"><label for="{{ question.id ~ choice.slug }}">{{ choice.libelle }}</label></div>
                {% endfor %}
            </div>
            {% endfor %}
            <div>
                <button type="submit" id="reponse_submit" name="reponse[submit]" class="border bg-black text-white px-4 py-2">Submit</button>
            </div>
        </div>
    </form>

{#    <div id="app"></div>#}
{% endblock %}
