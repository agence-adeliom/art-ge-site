{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots" : ["node_modules/@types", "assets/react/types"],
    "baseUrl": "./assets",
    "paths": {
      "@components/*": ["react/components/*"],
      "@screens/*": ["react/screens/*"],
      "@hooks/*": ["react/hooks/*"],
      "@react/*": ["react/*"],
      "@images/*": ["images/*"],
      "@icones/*": ["icones/*"],
    },
  },
  "include": ["assets/**/*.ts", "assets/**/*.tsx"],
  "exclude": ["node_modules"]
}
